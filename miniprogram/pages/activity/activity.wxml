<view class="margin-tb">
  <view class="cu-form-group">
    <view class="title cuIcon-calendar with-space-l">活动名称</view>
    <input value="{{activity.name}}" />
  </view>
  <view class="cu-form-group">
    <view class="title cuIcon-comment with-space-l">活动描述</view>
    <input value="{{activity.desc}}" />
  </view>
  <view class="cu-form-group">
    <view class="title cuIcon-selection with-space-l">今日值班</view>
    <picker bindchange="changeOnDutyUser" value="{{index}}" range="{{participators}}">
      <view class="picker">
        {{participators[index]}}
      </view>
    </picker>
  </view>
  <view class="cu-bar bg-white margin-top">
    <view class="action cuIcon-peoplelist with-space-l text-black">
      参与成员
    </view>
  </view>
  <checkbox-group class="padding-bottom-xs padding-lr-sm team-members bg-white flex flex-wrap justify-between" bindchange="changedParticipators">
    <label wx:for="{{teamMembers}}" wx:key="id">
      <checkbox class="hide" value="{{item.name}}" checked="{{item.isParticipator}}"></checkbox>
      <view class="cu-btn radius lines-black margin-lr-xs margin-bottom-sm team-member" style="background-size: {{bgSize}};background-position: {{item.x}}px {{item.y}}px;">{{item.name}}</view>
    </label>
    <view id="flex-wrap-fix" class="flex-sub {{flexWrapFix?'':'hide'}}" />
  </checkbox-group>
  <view class="cu-bar bg-white margin-top">
    <view class="action cuIcon-pic with-space-l text-black">
      背景图片
    </view>
  </view>
  <swiper class="bg-white" style="height: 300rpx" indicator-dots="true">
    <swiper-item wx:for="{{bgimgList}}" wx:key="index" class="padding-bottom">
      <view class="margin-lr bg-img bg-mask activity" style="background-image: url('{{item}}'); margin-top: 0">
      </view>
    </swiper-item>
  </swiper>
  <button class="cu-btn bg-black block lg margin-lg" bindtap="save" disabled="{{disabled}}">保存</button>
</view>
